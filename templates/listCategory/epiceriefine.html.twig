{% extends 'home.html.twig' %}

{% block title %}Détaits{% endblock %}

{% block body %}
<main class="fond_article">
    <div class="container_main">
        <ul id="main_list">
                <li><a href="{{ path('miel') }}"><img src="https://img.icons8.com/fluent-systems-regular/24/000000/honeycombs.png" alt=""/> Miels</a></li>
            <li><a href="{{ path('epiceriefine') }}"><i class="fab fa-pagelines"></i> Epicerie fine</a></li>
            <li><a href="{{ path('bienetre') }}"><i class="fas fa-hand-holding-heart"></i> Bien-être</a></li>
            <li><a href="{{ path('coffretscadeaux') }}"><i class="fas fa-gift"></i> Coffrets Cadeaux</a></li>
        </ul>
    </div>
    
     <div class="container_article">

        {% for product in products %} 
            <div class="shop-item">
                <article>
                    {# {% for image in product.images %}  #}
                        <figure class="container-img">
                            {# <img class="img_article" src="{{'uploads/' ~ image.titre }}" alt=""> #}
                        </figure>
                    {# {% endfor %}   #}

                    <div class="product-infos">
                        <h3 class="nom_prix1"><a class="text-yellow" href="{{ path('article', {id:product.id})}}">{{ product.nom_de_produit }}</a></h3>
                        <div class="price_cart">
                            <h4 class="nom_prix2">{{ product.prix }}€</h4>
                            <a class="btn btn-warning" href="{{ path('cart_add', {'id': product.id})}}"><i style="color: white; font-size:25px;" class="fas fa-cart-plus"></i></a>
                        </div>
                    </div>

                </article>
            </div>

        {% endfor %}   

    </div>  
      
</main>

 {% endblock %}

    


   